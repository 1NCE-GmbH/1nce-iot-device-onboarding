{
  "compilerOptions": {
    "types": ["node", "jest"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2020",
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "module":"commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*/*.spec.ts"
  ]
}
